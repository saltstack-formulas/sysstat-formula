# -*- coding: utf-8 -*-
# vim: ft=yaml
---
node:
  version: 13.12.0              # version for source/binary installs
  pkg:
    version: None               # version for os package managers (None=os default)
    use_upstream_repo: False    # Valid for Debian family only
    use_upstream_binary: False  # Binary from NodeSource
    use_upstream_source: False  # Source from Node
    deps:
      - vim                     # example for source install
    suffix: tar.gz
    binary:
      uri: https://nodejs.org/dist
      source_hash: 3e66b14bbeb9ea1ba129fae7c65374844f4ddaf1e48e2bc19b3b2570e158e362
    source:
      uri: https://github.com/nodejs/node/archive
      source_hash: 3e66b14bbeb9ea1ba129fae7c65374844f4ddaf1e48e2bc19b3b2570e158e362

  # Pillar-based config
  # See also https://docs.npmjs.com/configuring-npm/npmrc.html
  config_file: /etc/npmrc
  config:
    prefix: ${HOME}/.npm-packages
  environ_file: /etc/default/node.sh
  environ:
    a: b

  tofs:
    # The files_switch key serves as a selector for alternative
    # directories under the formula files directory. See TOFS pattern
    # doc for more info.
    # Note: Any value not evaluated by `config.get` will be used literally.
    # This can be used to set custom paths, as many levels deep as required.
    files_switch:
      - any/path/can/be/used/here
      - id
      - osfinger
      - os
      - os_family
    # All aspects of path/file resolution are customisable using the options below.
    # This is unnecessary in most cases; there are sensible defaults.
    # path_prefix: node_alt
    # dirs:
    #   files: files_alt
    #   default: default_alt
    source_files:
      node-config-file-file-managed-config_file:
        - 'alt_node.default.jinja'
